<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link asp-href-include="lib/twitter-bootstrap/css/*.min.css" rel="stylesheet" />
</head>
<body class="m-1 p-1">

    @RenderSection("Header") @* Dynamic section, will be filled in *@

    <div class="bg-info">
        This is part of the layout
    </div>

    @RenderBody()

    <div class="bg-info">
        This is part of the layout
    </div>

    @if (IsSectionDefined("Footer"))// way to check, if section defined in page or not
    {
        @RenderSection("Footer")
    }
    else
    {
        <h4>This is the default footer</h4>
    }

    @RenderSection("scripts", false) @*// render section if section is defined in page*@

    <div class="bg-info">
        This is part of the layout
    </div>

</body>
</html>