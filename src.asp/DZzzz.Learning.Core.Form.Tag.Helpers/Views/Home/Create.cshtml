@model City
@{ Layout = "_Layout"; }

<form method="post" asp-action="Create" asp-controller="Home">
    @*FormTagHelper automatically generate  anti-CSRF, if we need manually - asp-antiforgery=true*@
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label for="Country">Country:</label>
        <input class="form-control" asp-for="Country" />
    </div>
    <div class="form-group">
        <label for="Population">Population:</label>
        <input class="form-control" asp-for="Population" /> @*we can use this approach for formatting - asp-format="{0:#,###}"*@
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <a class="btn btn-primary" href="/Home/Index">Cancel</a>
</form>